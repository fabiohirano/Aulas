#------------------------------------------------------------------------------------------------------------------------------------#
#Cria todas as variaveis
#------------------------------------------------------------------------------------------------------------------------------------#

global JogoDaTela
global bolaX, bolaY
global velocidadeBolaVertical
global velocidadeBolaHorizontal
global velocidadeMaxima
JogoDaTela = 0
bolaX, bolaY = 0, 0
tamanhoBola = 20
corBola = color(255)
gravidade = 1.6
velocidadeBolaVertical = 0
velocidadeBolaHorizontal = 1.5
velocidadeMaxima = 6

#------------------------------------------------------------------------------------------------------------------------------------#
#Inicia o ambiente
#------------------------------------------------------------------------------------------------------------------------------------#

def setup():
    global bolaX, bolaY
    size(500, 500)
    bolaX, bolaY = width/2, height/5
    
#------------------------------------------------------------------------------------------------------------------------------------#
#coloca os objetos na tela
#------------------------------------------------------------------------------------------------------------------------------------#    

def draw():
    if JogoDaTela == 0:
        telaInicial()
    elif JogoDaTela == 1:
        joga()
    elif JogoDaTela == 2:
        perdeuTroxa
    else:
        deuRuim()
        
#------------------------------------------------------------------------------------------------------------------------------------#
#Desenha a tela inicial
#------------------------------------------------------------------------------------------------------------------------------------#
    
def telaInicial():
    background(0)
    textAlign(CENTER)
    textSize(30)
    fill(158, 156, 252)
    text("Clika pa jogah", width/2, height/2)

#------------------------------------------------------------------------------------------------------------------------------------#
#cria/organiza o jogo
#------------------------------------------------------------------------------------------------------------------------------------#

def joga():
    background(51, 204, 255)
    aplicaGravidade()
    desenhaBola()
    naoFoge()
    desenhaPlataforma()
    batePlataforma()
    
#------------------------------------------------------------------------------------------------------------------------------------#
#Desenha a Bola
#------------------------------------------------------------------------------------------------------------------------------------#

def desenhaBola():
    fill(corBola)
    ellipse(bolaX, bolaY, tamanhoBola, tamanhoBola)

#------------------------------------------------------------------------------------------------------------------------------------#
#Aplica a gravidade no jogo
#------------------------------------------------------------------------------------------------------------------------------------#

def aplicaGravidade():
    global velocidadeBolaVertical
    global bolaX, bolaY
    velocidadeBolaVertical += gravidade
    bolaY += velocidadeBolaVertical
    bolaX += velocidadeBolaHorizontal
    
#------------------------------------------------------------------------------------------------------------------------------------#
#Desenha as plataformas
#------------------------------------------------------------------------------------------------------------------------------------#

def desenhaPlataforma():
    fill(255)
    rectMode(CENTER)
    rect(width/4, height*0.8, width/2, 20)
    
#------------------------------------------------------------------------------------------------------------------------------------#    
#Faz a bola bater na plataforma
#------------------------------------------------------------------------------------------------------------------------------------#

def batePlataforma():
    global velocidadeBolaVertical
    global velocidadeBolaVertical
    global bolaX, bolaY
    if ((0 < bolaX) and (bolaX < width/2)): 
        if ((bolaY > height * 0.8) and (bolaY < (height*0.8) + 20)):
            quicaChao(height*0.8)
    
#------------------------------------------------------------------------------------------------------------------------------------#
#Faz a bola quicar no chão
#------------------------------------------------------------------------------------------------------------------------------------#
def quicaChao(superfice):
    global velocidadeBolaVertical
    global bolaX, bolaY
    bolaY = superfice - (tamanhoBola/2)
    velocidadeBolaVertical *= -1

#------------------------------------------------------------------------------------------------------------------------------------#
#Faz a bola quicar no teto
#------------------------------------------------------------------------------------------------------------------------------------#

def quicaTeto(superfice):
    global velocidadeBolaVertical
    global bolaX, bolaY
    bolaY = superfice - (tamanhoBola/2)
    velocidadeBolaVertical *= -1

#------------------------------------------------------------------------------------------------------------------------------------#
#Faz a bola quicar na parede da direita
#------------------------------------------------------------------------------------------------------------------------------------#

def quicaDireita(superficie):
    global velocidadeBolaHorizontal        
    global bolaX
    bolaX = superficie - (tamanhoBola/2)
    velocidadeBolaHorizontal *= -1
    if (velocidadeBolaHorizontal > velocidadeMaxima):
        velocidadeBolaHorizontal = velocidadeMaxima
    if (velocidadeBolaHorizontal < -velocidadeMaxima):
        velocidadeBolaHorizontal = -velocidadeMaxima

#------------------------------------------------------------------------------------------------------------------------------------#
#Faz a bola quicar na parede da esquerda
#------------------------------------------------------------------------------------------------------------------------------------#

def quicaEsquerda(superficie):
    global velocidadeBolaHorizontal
    global bolaX
    bolaX = superficie + (tamanhoBola/2)
    velocidadeBolaHorizontal *= -1.7

#------------------------------------------------------------------------------------------------------------------------------------#
#Faz a bola não sair/fugir da tela
#------------------------------------------------------------------------------------------------------------------------------------#

def naoFoge():
    if (bolaY + (tamanhoBola/2) > height):
        quicaChao(height)
    if (bolaY - (tamanhoBola/2) < 0):
        quicaChao(0)
    if (bolaX + (tamanhoBola/2) > width):
        quicaDireita(width)
    if (bolaX - (tamanhoBola/2) < 0):
        quicaEsquerda(0)
    
#------------------------------------------------------------------------------------------------------------------------------------#
#ERROR
#------------------------------------------------------------------------------------------------------------------------------------#

def perdeuTroxa():
    pass

#------------------------------------------------------------------------------------------------------------------------------------#
#ERROR
#------------------------------------------------------------------------------------------------------------------------------------#

def deuRuim():
    pass
    
#------------------------------------------------------------------------------------------------------------------------------------#
#Quabdo o mouse e clicado na tela inicial, faz começar o jogo
#------------------------------------------------------------------------------------------------------------------------------------#

def mousePressed():
    if JogoDaTela == 0:
        iniciaJogo()

#------------------------------------------------------------------------------------------------------------------------------------#        
#Inicia o jogo
#------------------------------------------------------------------------------------------------------------------------------------#        

def iniciaJogo():
    global JogoDaTela
    JogoDaTela = 1
    
